<odoo>
	<data>
		<record model="ir.ui.view" id="view_project_kanban_client_name">
			<field name="name">project.project.kanban</field>
			<field name="model">project.project</field>
			<field name="inherit_id" ref="project.view_project_kanban" />
			<field name="arch" type="xml">
				<xpath expr="//kanban/*[1]" position="after">
					<field name="prisme_sequence" />
				</xpath>
				<xpath expr="//div[@class='o_primary']" position="after">
					<div t-if="record.prisme_sequence.value">
						<div t-if="record.prisme_sequence.value != 0">
							<span>
								Project Code :
								<t t-esc="record.prisme_sequence.value" />
							</span>
						</div>
					</div>
				</xpath>
			</field>
		</record>
	</data>
</odoo>
