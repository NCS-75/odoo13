<odoo>
<data>
 <!--
            Complements to move line's form
        -->
        <record model="ir.ui.view" id="ons_view_move_line_inh01">
            <field name="name">ons.view.move.line.inh01</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="priority" eval="17"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='line_ids']/tree/field[@name='product_id']" position="before">
                    <field name="move_id"/>
<!--                         <field name="sequence"/> -->
                        <field name="layout_type" on_change="layout_type_change(layout_type)" attrs="{'column_invisible':[('move_id.type', '==', 'entry')]}"/>
                    </xpath>
                    <xpath expr="//field[@name='line_ids']/tree/field[@name='price_subtotal']" position="after">
                        <field name="rel_subtotal" attrs="{'invisible':[('layout_type', '!=', 'subtotal')], 'column_invisible':[('move_id.type', '==', 'entry')]}"/>
                    </xpath>
                </data>
            </field>
        </record>
</data>
</odoo>
