<odoo>
<data>
 <!--
            Complements to sale order line's form
        -->
        <record model="ir.ui.view" id="ons_view_sale_order_inh01">
            <field name="name">ons.view.sale.order.inh01</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="priority" eval="15"/>
            <field name="arch" type="xml">
                <data>
                	<xpath expr="//field[@name='order_line']/form/group[1]/group[1]/field[@name='product_id' and not(@invisible)]" position="attributes">
						<attribute name="attrs">{
							'readonly': [('product_updatable', '=', False)],
							'required': [('layout_type',  'in', ('article')),('display_type', '=', False)],
						}</attribute>
					</xpath>
                
                    <xpath expr="//field[@name='order_line']/form/group[1]/group[1]/field[@name='product_id' and not(@invisible)]" position="before">
                        <field name="layout_type" on_change="layout_type_change(layout_type)"/>
                    </xpath>
					
					<xpath expr="//field[@name='order_line']/tree/field[@name='product_id' and not(@invisible)]" position="attributes">
						<attribute name="attrs">{
							'readonly': [('product_updatable', '=', False)],
							'required': [('layout_type',  'in', ('article')),('display_type', '=', False)],
						}</attribute>
					</xpath>
                    <xpath expr="//field[@name='order_line']/tree/field[@name='product_id' and not(@invisible)]" position="before">
                        <field name="layout_type"/>
                    </xpath>
                    <xpath expr="//field[@name='order_line']/tree/field[@name='price_subtotal' and not(@invisible)]" position="after">
                        <field name="rel_subtotal" attrs="{'invisible':[('layout_type', '!=', 'subtotal')]}"/>
                    </xpath>
                </data>
            </field>
        </record>
</data>
</odoo>
