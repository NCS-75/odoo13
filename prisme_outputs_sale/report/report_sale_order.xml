		<!-- Create the base report -->
		<template id="report_so_base">
			<t t-call="web.html_container">
				<t t-foreach="docs" t-as="doc">
					<t t-set="lang" t-value="doc.partner_id.lang" />
					<t t-call="prisme_outputs_sale.report_so_view" t-lang="lang" />
				</t>
			</t>
		</template>

