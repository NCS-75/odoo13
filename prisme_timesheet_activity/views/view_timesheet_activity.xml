<odoo>
    <data>

        <record id="hr_timesheet_line_tree_view" model="ir.ui.view">
            <field name="name">account.analytic.line.tree.hr_timesheet</field>
            <field name="model">account.analytic.line</field>
            <field name="arch" type="xml">
                <tree string="Timesheet Activities">
                    <field name="date"/>
                    <field name="user_id" required="1" options='{"no_open": True}'/>
                    <field name="name"/>
                    <field name="project_id" required="1"/>
                    <field name="task_id" context="{'default_project_id': project_id}" domain="[('project_id', '=', project_id)]"/>
                    <field name="unit_amount" string="Duration" sum="Total time" widget="float_time"/>
                </tree>
            </field>
        </record>

        <record id="hr_timesheet_line_form_view" model="ir.ui.view">
            <field name="name">account.analytic.line.form.inherit.hr_timesheet</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_line_form"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <field name="account_id" position="after">
                    <field name="project_id" required="1"/>
                    <field name="task_id" domain="[('project_id', '=', project_id)]"/>
                </field>
                <field name="account_id" position="replace">
					<field name="account_id" invisible="1"/>
				</field>
				<field name="project_id" position="before">
					<field name="user_id"/>
			    </field>
			    
			    <xpath expr="/form/sheet/group" position="replace">
			    	<group>
				        <group>
	                     	<field name="name"/>
	                      	<field name="user_id"/>
	                      	<field name="project_id"/>
	                      	<field name="task_id" domain="[('project_id', '=', project_id)]"/>
	                    </group>
						<group string="Date">
							<field name="date"/>
							<field name="sheet_id"/>
						</group>
					</group>
			    </xpath>
			    
				
				<xpath expr="/form/sheet/group" position="after">
					<notebook>
                 		<page string="Informations">
                 			<group>
                          	 	<group string="Product" name="info_product">
	                           		<field name="product_id" domain="[('type','=','service')]"/>		
									<field name="time_beginning" widget="float_time" />
									<field name="time_end" widget="float_time" />
									<field name="unit_amount"/>
									<field name="product_uom_id"/>
									<field name="product_uom_category_id"/>
	                           	</group>
	                           	<group string="Accounting" name="info_accounting">
	                           		<field name="company_id" />	
	                           		<field name="partner_id" />		
									<field name="amount"/>
	                           	</group>
	                           	<group colspan="2" col="2">
									<separator string="Internal Description" colspan="2" />
									<field name="internal_description" nolabel="1" colspan="2" />
								</group>

                        	</group>
                  		</page>
                 	</notebook>
                </xpath>
            </field>
        </record>

        <record id="hr_timesheet_line_search" model="ir.ui.view">
            <field name="name">account.analytic.line.search</field>
            <field name="model">account.analytic.line</field>
            <field name="arch" type="xml">
                <search string="Timesheet">
                    <field name="date"/>
                    <field name="user_id"/>
                    <field name="project_id"/>
                    <field name="task_id"/>
                    <field name="name"/>
                    <field name="department_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Users" name="group_user" context="{'group_by':'user_id'}"/>
                        <filter string="Project" name="group_project" context="{'group_by':'project_id'}"/>
                        <filter string="Task" name="group_task" context="{'group_by':'task_id'}"/>
                        <filter string="Product" name="group_product" context="{'group_by':'product_id'}"/>
                        <filter string="Timesheet Month" name="group_month" context="{'group_by':'date'}" help="Timesheet by Month"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="act_hr_timesheet_line" model="ir.actions.act_window">
            <field name="name">Activities</field>
            <field name="res_model">account.analytic.line</field>
            <field name="domain">[('project_id', '!=', False)]</field>
            <field name="context">{"search_default_today":1}</field>
            <field name="search_view_id" ref="hr_timesheet.hr_timesheet_line_search"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to record activities.
              </p><p>
                You can register and track your workings hours by project every
                day. Every time spent on a project will become a cost and can be re-invoiced to
                customers if required.
              </p>
            </field>
        </record>

        <record model="ir.actions.act_window.view" id="act_hr_timesheet_line_view_tree">
            <field name="view_mode">tree</field>
            <field name="sequence">1</field>
            <field name="view_id" ref="hr_timesheet_line_tree_view"/>
            <field name="act_window_id" ref="act_hr_timesheet_line"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_hr_timesheet_line_view_form">
            <field name="view_mode">form</field>
            <field name="sequence">2</field>
            <field name="view_id" ref="hr_timesheet_line_form_view"/>
            <field name="act_window_id" ref="act_hr_timesheet_line"/>
        </record>

        <menuitem id="menu_hr_working_hours" parent="hr_timesheet.menu_hr_time_tracking" action="act_hr_timesheet_line"
            name="Detailed Activities" sequence="13"/>

    </data>
</odoo>
