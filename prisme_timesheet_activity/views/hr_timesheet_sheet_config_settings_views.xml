<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_config_settings_form_inherit_hr_timesheet_sheet" model="ir.ui.view">
        <field name="name">project.config.settings.form.inherit.timesheet.sheet</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_timesheet.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='timesheets']//div[@name='section_leaves']" position="after">
            	<h2>Extra features</h2>
                <div class="row mt16 o_settings_container" name="timesheet_extra">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="timesheet_max_difference"/>
                            <div class="text-muted">
                                Allowed difference in hours between the sign in/out and the timesheet 
                                computation for one sheet. Set this to 0 if you do not want any control.
                            </div>
                            <field name="timesheet_max_difference"/>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="timesheet_range"/>
                            <div class="text-muted">
                                Periodicity on which you validate your timesheets.
                            </div>
                            <field name="timesheet_range"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
